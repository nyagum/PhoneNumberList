<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noname.anya.phonenumberlist.AddPersonInfoActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        />
    <EditText
        android:id="@+id/textview_nickname_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:hint="닉네임"/>
    <EditText
        android:id="@+id/textview_message_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:hint="상태메세지"/>
    <EditText
        android:id="@+id/textview_phonenumber_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:hint="핸드폰 번호"
        android:inputType="phone"/>
    <Button
        android:id="@+id/Btn_add_new_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="추가"
        />
</LinearLayout>
